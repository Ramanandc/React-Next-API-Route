// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Expenditure {
  expenseId  BigInt   @id @default(autoincrement())
  userId     String
  accountId  BigInt
  reason     String
  amount     BigInt
  date       DateTime
}

model Income {
  incomeId   BigInt   @id @default(autoincrement())
  userId     String
  accountId  BigInt
  amount     BigInt
  date       DateTime
}

model Accounts {
  accountId      Int     @id @default(autoincrement())
  userId         String
  accountName    String
  accountHolder  String
  accountNo      String
  accountIfccode String
  accountBranch  String
  accountBalance Float
}


